@if (display)
{
<div class="modal-backdrop show"></div>

<div class="modal fade show" id="exemploConfirmacao"
     tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel ="
aria-hidden="true" style="display:block;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @Titulo
                </h5>
                <button @onclick="onCancel" type="button" class="close">
                    <span aria-hidden="true">&times;</span> 
                </button>

            </div>
            <div class="modal-body">
                @ChildContent
            </div>
            <div class="modal-footer">
                <button @onclick="onCancel" type="button" class="btn btn-secondary">Cancelar</button>
                <button @onclick="onConfirm" type="button" class="btn btn-primary">Confirmar</button>
            </div>
        </div>

    </div>
</div>
}
@code {
    private bool display = false;
    [Parameter] public string Titulo { get; set; } = "Confirmar";
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public EventCallback onConfirm { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
    public void Show() => display = true;
    public void Hide() => display = false;

}
